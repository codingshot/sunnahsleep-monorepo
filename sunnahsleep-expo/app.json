{
  "expo": {
    "name": "Sunnah Sleep",
    "slug": "sunnahsleep",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sunnahsleep",
    "userInterfaceStyle": "automatic",
    "description": "Sleep tracking, bedtime alarms, prayer times, Qibla, and evening adhkarâ€”all in one app.",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sunnahsleep.app",
      "buildNumber": "1",
      "infoPlist": {
        "UIBackgroundModes": ["fetch"],
        "NSLocationWhenInUseUsageDescription": "Sunnah Sleep uses your location for prayer times and Qibla direction.",
        "UIBackgroundFetchIntervalMinimum": 3600
      }
    },
    "android": {
      "package": "com.sunnahsleep.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.USE_EXACT_ALARM",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      ["expo-location", { "locationWhenInUsePermission": "Sunnah Sleep uses your location for prayer times and Qibla direction." }],
      "expo-notifications"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
